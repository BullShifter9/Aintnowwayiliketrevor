local enabled = false

ToggleButton.MouseButton1Click:Connect(function()
   enabled = not enabled
   ToggleButton.Text = enabled and "Disable Chatbot" or "Enable Chatbot"
   StatusLabel.Text = "Status: " .. (enabled and "Enabled" or "Disabled")
   ToggleButton.BackgroundColor3 = enabled and Color3.fromRGB(65, 185, 65) or Color3.fromRGB(65, 65, 65)
end)

local function onPlayerChatted(player, message)
   if enabled then
       wait(math.random(1, 2))
       local response = responses[math.random(1, #responses)]
       game:GetService("Chat"):Chat(workspace, response)
   end
end

Players.PlayerAdded:Connect(function(player)
   player.Chatted:Connect(function(message)
       onPlayerChatted(player, message)
   end)
end)
if not LocalPlayer then
    LocalPlayer = Players.LocalPlayer
    while not LocalPlayer do
        LocalPlayer = Players.LocalPlayer
        wait()
    end
end

-- Modified chat function
local function onPlayerChatted(player, message)
    if enabled and player == LocalPlayer then
        wait(math.random(1, 2))
        local response = responses[math.random(1, #responses)]
        game:GetService("Chat"):Chat(player.Character, response)
    end
end

-- Connect chat event for LocalPlayer
LocalPlayer.Chatted:Connect(function(message)
    onPlayerChatted(LocalPlayer, message)
end)
